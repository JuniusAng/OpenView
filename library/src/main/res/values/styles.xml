<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerItem.DropDownItem</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="SpinnerItem" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textColor">#00FF00</item>
    </style>

    <style name="SpinnerItem.DropDownItem" parent="@android:style/Widget.DropDownItem.Spinner">
        <item name="android:textColor">#FF0000</item>
    </style>
    
    <style name="BaseText" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="BaseText.XSmall_12">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    <style name="BaseText.Small_13">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    <style name="BaseText.Common_14">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/text_main</item>
    </style>
    <style name="BaseText.Large_15">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/text_main</item>
    </style>
    <style name="BaseText.XLarge_17">
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/text_main</item>
    </style>

    <style name="BaseText.Huge_22">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/text_main</item>
    </style>

    <style name="BaseInputLayout" parent="Theme.Design.Light">
        <item name="errorTextAppearance">@style/CoreText.Error</item>
        <item name="floatingHelpTextAppearance">@style/CoreText.Floating</item>
        <item name="inlineHelpTextApperance">@style/CoreText.Floating</item>
        <item name="hintTextAppearance">@style/CoreText.Floating</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/design_textinput_error_color_light</item>
        <item name="colorControlHighlight">@color/design_textinput_error_color_light</item>
    </style>

    <style name="BaseInputLayout.Email">

    </style>

    <style name="CoreText.Error" parent="BaseText.XSmall_12">
        <item name="android:textColor">@color/design_textinput_error_color_light</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CoreText.Floating" parent="BaseText.XSmall_12">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>
